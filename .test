FROM node:18 AS Production

ENV NODE_ENV=production

WORKDIR /usr/src/Frontend

COPY package.json .
COPY package-lock.json .

COPY . .

RUN npm run build

EXPOSE 3000

CMD ["sh", "-c", "npm start"]
